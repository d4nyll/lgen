{
  "name": "littlegenius",
  "scripts": {

    "clean-build": "rm -rf ../build",
    "clean-local": "./clean_build.sh",

    "localdev" : "meteor --settings ../config/dev.settings.json",
    "localdev-ssl" : "export MONGO_URL=mongodb://127.0.0.1:28888/littlegenius && meteor --settings ../config/dev.settings.json",
    "localdev-clean" : "./clean_build.sh && meteor -v --settings ../config/dev.settings.json",

    "ios-local": "meteor run ios --settings ../config/dev.settings.json --mobile-server=http://localhost:3000",
    "ios-local-clean": "./clean_build.sh &&meteor run ios --settings ../config/dev.settings.json --mobile-server=http://localhost:3000",
    "ios-device-local": "./clean_build.sh && meteor run ios-device -v --settings ../config/dev.settings.json --mobile-server=http://localhost:3000",

    "ios-uat": "./clean_build.sh && meteor run ios --settings ../config/stage.settings.json --mobile-server=https://uat.gosmartix.com -p 4000",
    "ios-device-uat": "./clean_build.sh && meteor run ios-device --settings ../config/stage.settings.json --mobile-server=https://uat.gosmartix.com -p 4000",

    "ios-prd": "./clean_build.sh && NODE_ENV=production meteor run ios -v --settings ../config/prd.settings.json --mobile-server=https://app.gosmartix.com -p 5000",
    "ios-device-prd": "./clean_build.sh && NODE_ENV=production meteor run -v ios-device --settings ../config/prd.settings.json --mobile-server=https://app.gosmartix.com -p 5000",

    "build-apk": "./build-android.sh $1",
    "sign-apk": "./sign-android.sh $1",

    "android-local": "./clean_build.sh && meteor run android --settings ../config/dev.settings.json --mobile-server=http://10.0.2.2:3000",
    "android": "meteor run android --settings ../config/stage.settings.json --mobile-server=https://uat.gosmartix.com",
    "android-device": "meteor run android-device --settings ../config/stage.settings.json --mobile-server=https://uat.gosmartix.com",

    "runlocal-android-emulator": "meteor run android -v --settings ../config/dev.settings.json",
    "build-example": "NODE_ENV=production VULCANIZE=true meteor build ../myapp-dist --server=https://api.myapp.com/ --mobile-settings settings-production.json",

    "build-uat":  "rm -rf ../build && meteor build ../build  --mobile-settings=../config/stage.settings.json --server=https://uat.gosmartix.com",
    "build-uat2":  "meteor build .meteor/local -v --mobile-settings=../config/stage.settings.json --server=https://uat.gosmartix.com",

    "deploy-ko":  "cd ../dist && scp app.tar.gz lg@uat.gosmartix.com:~/app && ssh lg@uat.gosmartix.com \"cd app && tar xzvf app.tar.gz\"",

    "deploy-uat-debug": "./clean_build.sh && cd ../config && mup deploy --config=stage.mup.json --settings=stage.settings.json",
    "deploy-uat"   : "./clean_build.sh && cd ../config && NODE_ENV=production mup deploy --config=stage.mup.json --settings=stage.settings.json",
    "deploy-prd"   : "./clean_build.sh && cd ../config && NODE_ENV=production mup deploy --config=prd.mup.json --settings=prd.settings.json",

    "setup"    : "cd ../config && DEBUG=* mup setup   --config=stage.mup.json --settings=stage.settings.json",
    "stop"     : "cd ../config && DEBUG=* mup stop   --config=stage.mup.json --settings=stage.settings.json",
    "restart"  : "cd ../config && DEBUG=* mup restart   --config=stage.mup.json --settings=stage.settings.json",
    "reconfig"         : "cd ../config && DEBUG=* mup reconfig  --config=stage.mup.json --settings=stage.settings.json",
    "reconfig-carmelu" : "cd ../config && DEBUG=* mup reconfig  --config=carmelu.mup.json --settings=carmelu.settings.json",
    "logs"     : "cd ../config && DEBUG=* mup logs  ",

    "listplugins": "ls -lrt .meteor/local/cordova-build/plugins"
   },
  "dependencies": {
    "meteor-node-stubs": "^0.2.3",
    "xlsx": "^0.8.0",
    "jszip": "^3.0.0",
    "log4js": "^0.6.29"
  }
}
